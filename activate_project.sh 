    echo "ğŸŒ Launching Chromium..."
    chromium https://httpbin.org/redirect/2
    ;;
  3)
    echo "ğŸ‘‹ Goodbye!"
    exit 0
    ;;
  *)
    echo "âŒ Invalid option. Please try again."
    ;;
